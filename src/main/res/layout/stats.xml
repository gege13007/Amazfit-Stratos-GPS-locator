<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="insideInset"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/regler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6sp"
            android:text="Infos Gpx"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/datetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/duratxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:text="Len "
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/disttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:text="Dist "
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/altmaxtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:text="Alt Max"
            android:textAlignment="gravity"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/altmintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:text="Alt Min"
            android:textAlignment="gravity"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vmoytxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:text="Vmoy"
            android:textAlignment="gravity"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/closesetting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/close"
            android:keepScreenOn="true"
            android:onClick="closestats" />
    </LinearLayout>
</ScrollView>